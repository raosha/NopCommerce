@model Nop.Plugin.Misc.Ebay.Domains.EbayConfiguration

@inject Nop.Core.IWebHelper webHelper

@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="Configuration" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.Raw("Ebay Configuration Settings")
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="ProductionToken" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ProductionToken" />
                        <span asp-validation-for="ProductionToken"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="SandBoxToken" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="SandBoxToken" />
                        <span asp-validation-for="SandBoxToken"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        @*<input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>